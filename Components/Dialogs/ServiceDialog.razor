<MudDialog>
    <DialogContent>
        <MudForm Model="@Model" @ref="@form" Validation="@(serviceValidator.ValidateValue)" ValidationDelay="0">
            <MudGrid Spacing="2">
                <MudItem xs="12" sm="6" xl="6">
                    <MudTextField Immediate="true"
                                  For="@( () => Model.Name)"
                                  @bind-Value="Model.Name"
                                  Variant="Variant.Outlined"
                                  Label="Name" />
                </MudItem>
                <MudItem xs="12" sm="6" xl="6">
                    <MudNumericField HideSpinButtons="true"
                                     For="@( () => Model.UnitCost)"
                                     @bind-Value="Model.UnitCost"
                                     Variant="Variant.Outlined"
                                     Label="Precio" />
                </MudItem>
                <MudItem xs="12" sm="12" xl="12">
                    <MudTextField For="@(() => Model.Description)"
                                  Lines=5 Immediate="true"
                                  @bind-Value="Model.Description"
                                  Variant="Variant.Outlined"
                                  Label="Descripción" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
        <MudButton OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>