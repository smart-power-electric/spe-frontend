@using web_app.Components.Shared;

<MudDialog>
    <DialogContent>
        <MudForm Model="@Model" @ref="@form" Validation="@(workerValidator.ValidateValue)" ValidationDelay="0">
            <MudGrid Spacing="2">
                <MudItem xs="12" sm="6" xl="4">
                    <MudTextField @bind-Value="Model.Name"
                                  For="@( () => Model.Name)"
                                  Immediate="true"
                                  Variant="Variant.Outlined"
                                  Label="Full Name" />
                </MudItem>
                <MudItem xs="12" sm="6" xl="4">
                    <MudTextField For="@( () => Model.Phone)"
                                  Immediate="true"
                                  Variant="Variant.Outlined"
                                  Label="Teléfono"
                                  @bind-Value="Model.Phone" />
                </MudItem>
                <MudItem xs="12" sm="6" xl="4">
                    <MudTextField For="@( () => Model.SocialSecurity)"
                                  Immediate="true"
                                  Variant="Variant.Outlined"
                                  Label="Seguro social"
                                  @bind-Value="Model.SocialSecurity" />
                </MudItem>
                <MudItem xs="12" sm="6" xl="4">
                    <MudTextField For="@( () => Model.Speciality)"
                                  Immediate="true"
                                  Variant="Variant.Outlined"
                                  Label="Especialidad"
                                  @bind-Value="Model.Speciality" />
                </MudItem>
                <MudItem xs="12" sm="6" xl="4">
                    <MudDatePickerOffset @bind-Value="Model.StartDate"
                                         Variant="Variant.Outlined"
                                         NewLabel="Inicio del contrato" />
                </MudItem>
                <MudItem xs="12" sm="6" xl="4">
                    <MudDatePickerOffset @bind-Value="Model.EndDate"
                                         Variant="Variant.Outlined"
                                         NewLabel="Fin del contrato" />
                </MudItem>
                <MudItem xs="12" sm="12" xl="12">
                    <MudTextField For="@(() => Model.Address)"
                                  T="string" Lines=5 Immediate="true"
                                  @bind-Value="Model.Address"
                                  Variant="Variant.Outlined"
                                  Label="Dirección" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Submit">Aceptar</MudButton>
        <MudButton OnClick="Cancel">Cancelar</MudButton>
    </DialogActions>
</MudDialog>